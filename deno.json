{
  "name": "taskell",
  "version": "0.2.0",
  "exports": "./src/cli.ts",
  "tasks": {
    "dev": "deno run --allow-read --allow-write --watch src/cli.ts",
    "test": "deno test --allow-read --allow-write --allow-net test/",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "strict": true
  }
}